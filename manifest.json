{
  "manifest_version": 3,
  "name": "Personalized Dashboard",
  "version": "1.0",
  "description": "A Chrome extension that shows weather, bookmarks, and Asana tasks.",
  "chrome_url_overrides": {
    "newtab": "dashboard.html"
  },
  "permissions": ["storage", "geolocation", "bookmarks", "identity"],
  "background": {
    "service_worker": "background.js"
  },
  
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "1209639179448938",
    "scopes": ["https://app.asana.com/"]
  }
}

